MACRO (FIND_CSSZLIB)
  FIND_PATH(PATH_TO_CSSZLIB NAMES csszlib.h)
  FIND_LIBRARY(CSSZLIB_LIBRARY NAMES cssz)
  IF (PATH_TO_CSSZLIB AND CSSZLIB_LIBRARY)
    SET(CSSZLIB_FOUND 1)
    SET(CSSZLIB_INCLUDE_DIR ${PATH_TO_CSSZLIB})
    SET(CSSZLIB_LIBRARY ${CSSZLIB_LIBRARY})
    SET(CSSZLIB_DIR ${CMAKE_SOURCE_DIR}/extra/csszlib)
    MESSAGE(STATUS "CSSZLIB_INCLUDE_DIR ${CSSZLIB_INCLUDE_DIR}")
    MESSAGE(STATUS "CSSZLIB_LIBRARY ${CSSZLIB_LIBRARY}")
  ENDIF()
ENDMACRO()
